<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lobby_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".fragments.LobbyScreenFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/teal_700" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lobby_info"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_info_24"
        app:iconGravity="end"
        app:iconTint="@color/teal_700" />

    <LinearLayout
        android:id="@+id/lobby_gameInfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_btn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lobby_game_icon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/lobby_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Lobby`s name"
            android:textColor="@color/teal_700"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/lobby_infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lobby_player_count"
                style=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Players :\n2/4" />

            <TextView
                android:id="@+id/lobby_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Game Name" />

            <TextView
                android:id="@+id/lobby_age_restriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Age :\n25" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lobby_inv_link_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|start"
            android:text="Invite to Lobby"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            app:icon="@drawable/ic_baseline_add_circle_outline_24"
            app:iconTint="@color/teal_700" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/lobby_participantsIcons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lobby_gameInfo_layout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@mipmap/ic_launcher" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lobby_participantsIcons_layout"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lobby_address_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="Lobby address"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            app:icon="@drawable/ic_baseline_location_on_24"
            app:iconTint="@color/teal_700"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lobby_hour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lobby_address_btn"
            android:text="Hour : 00:00"
            android:layout_marginStart="30dp"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            app:icon="@drawable/ic_baseline_location_on_24"
            app:iconTint="@color/teal_700"/>
    </RelativeLayout>
</RelativeLayout>