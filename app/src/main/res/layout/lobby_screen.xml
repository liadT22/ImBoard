<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lobby_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.all_lobbies.LobbyScreen">


    <TextView
        android:id="@+id/lobby_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Lobby`s name"
        android:textColor="@color/teal_700"
        android:textSize="24sp" />

        <ImageView
            android:id="@+id/lobby_game_icon"
            android:layout_width="80dp"
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:id="@+id/lobby_infoLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lobby_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Players :\n2/4" />

            <TextView
                android:id="@+id/lobby_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Game Name"
                android:textSize="20dp"
                android:textStyle="bold"/>


    </LinearLayout>

    <GridLayout
        android:id="@+id/lobby_participantsIcons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p1"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_launcher"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p2"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_launcher"
             />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p3"
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_launcher"
             />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/lobby_icon_p4"
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
             android:background="@mipmap/ic_launcher"
            />

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/lobby_location_lobby_room"
            android:textSize="20sp"
            android:text="Location"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/lobby_date_lobby_room"
            android:textSize="20sp"
            android:text="Date"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Join"
        android:layout_marginTop="10dp"/>
</LinearLayout>