<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_library_add_check_24"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/my_games_btn"
                android:text="My Games"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
            />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_people_24"
                android:layout_height="match_parent"
                android:id="@+id/friends_btn"
                android:layout_width="match_parent"
                android:text="Friends"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_manage_accounts_24"
                android:layout_height="match_parent"
                android:id="@+id/profile_setting_btn"
                android:layout_width="match_parent"
                android:text="Profile Settings"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_history_24"
                android:id="@+id/history_btn"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="History"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_stars_24"
                android:layout_height="match_parent"
                android:id="@+id/achievements_btn"
                android:layout_width="match_parent"
                android:text="Achievements"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_settings_24"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/setting_btn"
                android:gravity="center|start"
                android:text="Setting"
                android:textAllCaps="false"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                app:icon="@drawable/ic_baseline_chat_24"
                android:textStyle="italic"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/terms_and_condition_btn"
                android:text="Terms and Conditions"
                android:textAllCaps="false"
                android:gravity="center|start"
                app:iconTint="@color/teal_700"
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>